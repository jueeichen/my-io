.paymentOrder .bottom .content .content-bottom {
  margin-top: 20px;
  width: 100%;
  height: 30px;
}


.paymentOrder .bottom .content .content-bottom  .bottom-item {
  width: 100%;
  height: 100%;
  line-height: 30px;
  color: #999999;
  font-size: 28rpx;
  padding: 0 10px;
  box-sizing: border-box;
}

.paymentOrder .bottom .content .content-bottom  .bottom-item .left  {
  width: 50%;
  float: left;
}

.paymentOrder .bottom .content .content-bottom  .bottom-item .right {
  text-align: right;
}



.paymentOrder .withdraw-model {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background:rgba(0,0,0,0.6);
  z-index: 10;
}

.paymentOrder .withdraw-model .content-box {
  width: 540rpx;
  height: 500rpx;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.paymentOrder .withdraw-model image {
  width: 230rpx;
  height: 230rpx;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  z-index: 11;
}

.paymentOrder .withdraw-model .box {
  width: 100%;
  height: 380rpx;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  border-radius: 10rpx;
  box-shadow: 0px 0px 19px 1px rgba(174,182,215,0.49);
}


.paymentOrder .withdraw-model .box .text {
  font-size: 26rpx;
  color: #666666;
  width: 100%;
  height: 30px;
  padding: 0 30px;
  text-align: center;
  box-sizing: border-box;
  position: absolute;
  bottom:50%;
}

.paymentOrder .withdraw-model .box .text view {
  margin-bottom: 10px;
}


.paymentOrder .withdraw-model .box .btn {
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 10px;
  width: 100%;

}


.paymentOrder .withdraw-model .box .btn view {
  width: 50%;
  text-align: center;
  font-size: 34rpx;
  color: #999999;
}

.paymentOrder .withdraw-model .box .btn view:first-child {
  color: #3699F1;
}