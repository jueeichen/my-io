.providePassWord {
  width: 100%;
  height: 100%;
  position: absolute;
  font-size: 14px;
  color: #FF7F0B;
}

.providePassWord .background {
  width: 100%;
  height: 50%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.providePassWord .background image {
  width: 100%;
}

.providePassWord__title {
  color: #fff;
  z-index: 1;
  width: 100%;
  height: 40px;
  font-size: 16px;
  text-align: center;
}

.providePassWord__title text {
  color: #fff;
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
}

.providePassWord__title .back {
  width: 8px;
  height: 8px;
  border-left: 1px solid #fff; border-bottom: 1px solid #fff;
  transform: rotate(45deg);
  position: absolute;
  top: 15px;
  left: 20px;
  z-index: 99;
}


.container {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
}

.container .top {
  width: 100%;
  height: 205rpx;
  position: relative;
  margin: 80rpx 0;
 padding-left: 90rpx 

}

.container .top .content {
  display: block ;
  float: left;
  margin-left: 14rpx;
   width: 96rpx;
  height: 150rpx;
  position: relative;
  /* top: 50%;
  left: 50%; */
  /* transform: translate(-50%, -50%); */
}

.container .top .text {
  width: 96rpx;
  height: 150rpx;
  text-align: center;
  color: #FF7F0B;
  font-size: 60rpx;
  border: none;
  position: relative;
}

.container .top .content image {
   width: 96rpx;
  height: 150rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.container .top .center-text {
  width: 570rpx;
  height: 130rpx;
  position: relative;
  margin-top:50rpx;
  display:inline-block ;
  text-align: center;
  font-size: 12px;
}

.container .top .center-text view {
  margin: 5px 0;
}


.container .center {
   width: 385rpx;
  height: 385rpx;
  margin: 50px  auto;
  position: relative;
}

.container .center image {
  width: 100%;
  height: 100%;
}

.container .center .time {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  text-align: center;
  width: 100%;
  font-size: 26rpx;
  color: #FF7F0B;
}

.container .center .time .content {
  font-size: 50rpx;
}


.container .bottom {
  position: absolute;
  bottom: 10px;
  width: 100%;
  text-align: center;
  color: #999999;
}

.container .bottom text {
  color: #FF7F0B;
}
.content_password text{
  display: inline-block;
