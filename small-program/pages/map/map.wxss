.targetPop {
  position: fixed;
  left: 50%;
  bottom: 160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 650rpx;
  height: 190rpx;
  padding: 30rpx;
  margin-left: -355rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border: 1rpx solid #fff;
  box-shadow: 0px 0px 15px 0px rgba(174, 182, 215, 0.2);
}

.targetPop .shopImg {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  background-color: #e6e6e6;
  transform: translateY(-25rpx);
}

.shopPopContent {
  position: relative;
  width: 90%;
  flex: 1;
  margin-left: 20rpx;
  transform: translateY(-25rpx);
}

.shopPopContent .titP {
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  height: 50rpx;
  overflow: hidden;
}

.shopPopContent .titP .title {
  flex: 1;
  transform: translateY(3rpx);
}

.shopPopContent .titP .distanceMi {
  width: 120rpx;
  text-align: right;
  color: #333;
  font-size: 30rpx;
  transform: translateY(10rpx) translateX(-5rpx);
}

.oTher {
  position: absolute;
  bottom: 15rpx;
}

.oTher .oTherSapn {
  float: left;
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 24rpx;
  margin-right: 10rpx;
  border: 1rpx solid #fff;
  text-align: center;
}

.oTher .oTherSapn.available {
  color: #47ae51;
  background-color: #ecf7ed;
}

.oTher .oTherSapn.Unavailable {
  color: #333;
  background-color: #eee;
}

.searchInput {
  width: 100%;
  height: 7%;
  position: absolute;
  top: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.searchInput .section {
  border: #eee solid 1px;
  background-color: #fff;
  height: 100%;
  border-radius: 5px;
}

.searchInput .section .input {
  width: 100%;
  height: 100%;
  font-size: 14px;
  text-indent: 45%;
  z-index: 99;
}

.searchInput .section .search-image {
  width: 14px;
  height: 14px;
  position: absolute;
  top: 50%;
  left: 35%;
  transform: translateY(-50%);
  z-index: 99;
}

.searchInput .section .searchText {
  z-index: 99;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #666;
}

.searchInput .btn {
  position: absolute;
  top: 1px;
  right: 10px;
  width: 50px;
  height: 42px;
  line-height: 42px;
  font-size: 14px;
  background-color: #fff;
  border: none;
  color: #666;
  text-align: center;
  z-index: 99;
}

.navigation_img {
  width: 38rpx;
  height: 38rpx;
  transform: translateY(10rpx);
}

.redNotice {
  color: red;
  display: inline-block;
  font-size: 23rpx;
  transform: translateY(7rpx);
}
