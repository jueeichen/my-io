@import '../../static/css/common.styl'

.step
	padding-bottom 220rpx
	_flex-start-column()
	align-items center
	.step-top
		width 750rpx
		height 280rpx
		background linear-gradient(90deg, #0198F5 0%, #28C9FF 100%)
		_flex-center-column()
		_box-sizing(0, 60rpx)
		>view:first-child
			margin-bottom 50rpx
			font-size 32rpx
			font-weight 500
			color #FFFFFF
		van-progress
			width 100%
		>view:last-child
			margin-top 20rpx
			width 100%
			font-size 24rpx
			font-weight 500
			color #FFFFFF
			display flex
			>text:last-child
				margin-left 30rpx
.steps-content-main
	margin-top 62rpx
	width 100%
	// padding-left: 49rpx
	box-sizing: border-box
	padding: 0 60rpx 0 76rpx
	.steps-content-item
		width 100%
		border-left 1rpx solid #479CFE
		position relative
		_box-sizing(0, 49rpx)
		padding-bottom 54rpx
		>view
			font-size 30rpx
			font-weight 400
			color #1A1A1A
		>text
			// margin-top: 16rpx
			font-size 26rpx
			font-weight 400
			color #7E7E7E
			line-height 32rpx
		>image
			width 360rpx
			margin-top 16rpx
			height 200rpx
			background #EEEEEE
		.steps-content-position
			position absolute
			width 36rpx
			height 36rpx
			background-color white
			left -18rpx
			top 0
			margin-top 0rpx
		.steps-content-position-gray
			width: 36rpx;
			height: 36rpx;
			box-sizing: border-box 
			border: 2rpx solid #D4D4D4;
			border-radius: 50%
		&.steps-content-item-border-gray	
			border-left 1rpx solid #EEEEEE	
		&:last-child
			border none
		
