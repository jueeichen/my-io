@import '../../static/css/common.styl';

.poster {
	height: 100vh;
	background: #F6F6F6;
}

.poster-main {
	width: 100%;
	height: 100%;
	_flex-center-column();
}

.poster-btn {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 750rpx;
	height: 216rpx;
	_flex-center();
	justify-content: space-between;
	_box-sizing(0, 200rpx);

	>view {
		_flex-start-column();
		align-items: center;
		font-size: 28rpx;
		font-weight: 400;
		color: #1A1A1A;

		>view:first-child {
			width: 98rpx;
			height: 98rpx;
			background: #fff;
			border-radius: 50%;
			_flex-center();

			>image {
				width: 44rpx;
				height: 44rpx;
			}

			>view {
				margin-top: 14rpx;
			}
		}
	}
}

