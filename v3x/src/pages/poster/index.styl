@import '../../static/css/common.styl'

.poster
	height 100vh
	overflow: hidden
	background #F6F6F6
.poster-main
	box-sizing border-box
	padding-top 59rpx
	width 100%
	height 100%
	_flex-start-column()
	align-items center
.poster-btn
	position fixed
	left 0
	bottom 0
	width 750rpx
	height 216rpx
	_flex-center()
	justify-content space-between
	_box-sizing(0, 200rpx)
	>view, >button
		_flex-start-column()
		align-items center
		font-size 28rpx
		font-weight 400
		color #1A1A1A
		>view:first-child
			width 98rpx
			height 98rpx
			background #fff
			border-radius 50%
			margin-bottom: 17rpx
			_flex-center()
			>image
				width 44rpx
				height 44rpx
.poster-dots
	margin-top 50rpx
	// background-color pink
	width 100%
	height 16rpx
	_flex-center()
	>text
		margin 0 8rpx
		width 16rpx
		height 16rpx
		border-radius 50%
		background #D8D8D8
	.dots-active
		background #479CFE
.createPoster
	width 580rpx
	height 1031rpx
	position fixed
	left -100000rpx
	background pink