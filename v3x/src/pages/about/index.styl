@import '../../static/css/common.styl'

.about
	padding-bottom 220rpx
	_flex-start-column()
	align-items center
	.about-main-img
		width 100%
	>view
		_box-sizing(0, 60rpx)
		.about-title
			margin-top 56rpx
			font-size 32rpx
			font-weight 500
			color #1A1A1A
		.about-content
			margin-top 30rpx
			font-size 28rpx
			font-weight 400
			color #1A1A1A
			line-height 44rpx
		>image
			margin-top 43rpx
			width 630rpx
			height 320rpx
			background #FBFCFB
			border-radius 12rpx
