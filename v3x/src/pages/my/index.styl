@import '../../static/css/common.styl'

.my
	background-color rgba(246, 246, 246, 1)
	_flex-start-column()
	align-items center
	padding-bottom 65rpx
	min-height 90vh
	.my-top
		width 750rpx
		height 340rpx
		background linear-gradient(180deg, #FFFFFF 0%, #D9F4FF 100%)
		border-radius 0px 0px 20rpx 20rpx
		_box-sizing(40rpx, 0)
		_flex-center-column()
		justify-content space-between
		.my-top-left
			_box-sizing(0, 40rpx)
			_flex-center()
			width 100%
			justify-content space-between
			.my-open-data
				display flex
				align-items center
				>view:first-child
					// background-color pink
					width 88rpx
					height 88rpx
					// background-color: pink;
					overflow hidden
					border-radius 50%
				>view:last-child
					margin-left 29rpx
					font-size 34rpx
					font-weight 500
					color #1A1A1A
			.my-top-btn
				_flex-center()
				width 160rpx
				height 64rpx
				background #479CFE
				border-radius 32rpx
				font-size 26rpx
				font-weight 500
				color #FFFFFF
		.my-top-bottom
			width 100%
			_box-sizing(0, 62rpx)
			_flex-center()
			justify-content space-between
			align-items flex-end
			>view
				_flex-center-column()
				image
					width 72rpx
					height 72rpx
				.my-top-menu, .iconfont
					_flex-center()
					font-size 26rpx
					font-weight 400
					color #7E7E7E
				.my-top-detail
					margin-top 15rpx
					font-size 42rpx
					font-weight 700
					color #1A1A1A
					position relative
					>text
						_flex-center()
						position absolute
						right -100rpx
						top -30rpx
						width 93rpx
						height 33rpx
						background #FF5000
						border-radius 17rpx 17rpx 17rpx 0px
						font-size 20rpx
						font-weight 500
						color #FFFFFF
	.my-center
		width 690rpx
		height 178rpx
		background #FFFFFF
		border-radius 16rpx
		_box-sizing(0, 23rpx)
		_flex-center()
		margin-top 30rpx
		justify-content space-between
		>view
			_flex-center-column()
			position relative
			>image
				width 54rpx
				height 54rpx
			>view
				margin-top 14rpx
				font-size 24rpx
				font-weight 400
				color #7E7E7E
		>view:last-child::before
			position absolute
			display block
			content ''
			left -34rpx
			top 0
			width 2rpx
			height 98rpx
			background #EEEEEE
	.my-main-img
		margin-top 30rpx
		width 690rpx
		height 180rpx
	.my-bottom
		margin-top 30rpx
		_box-sizing(0, 30rpx)
		_flex-start-column()
		width 690rpx
		height 294rpx
		background #FFFFFF
		border-radius 12rpx
		.my-bottom-item
			width 100%
			height 97rpx
			_flex-center()
			border-bottom 1px solid #EEEEEE
			color #1A1A1A
			justify-content space-between
			&:last-child
				border none
		.my-bottom-item_left
			display flex
			>image
				width 44rpx
				height 44rpx
			>view
				font-size 28rpx
				color #1A1A1A
				margin-left 19rpx
		.iconfont
			color #7E7E7E !important