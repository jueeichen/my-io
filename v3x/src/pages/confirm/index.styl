@import '../../static/css/common.styl';

.confirm-index {
	_flex-start-column();
	align-items: center;
	background: #F6F6F6;

	.confirm-top {
		margin-top: 30rpx;
		_flex-center();
		_box-sizing(30rpx, 30rpx);
		justify-content: flex-start;
		width: 690rpx;
		height: 196rpx;
		background: #FFFEFC;
		border-radius: 12rpx;

		image {
			width: 136rpx;
			height: 136rpx;
			background-color: pink;
			margin-right: 20rpx;
		}

		>view {
			_flex-center-column();
			align-items: flex-start;

			text:first-child {
				font-size: 34rpx;
				font-weight: 500;
				color: #1A1A1A;
				margin-bottom: 24rpx;
			}

			text:last-child {
				font-weight: 500;
				font-size: 26rpx;
				font-weight: 400;
				color: #999999;
				line-height: 28rpx;
			}
		}
	}

	.confirm-center {
		margin-top: 30rpx;
		width: 690rpx;
		background: #FFFFFF;
		border-radius: 12px;
		_flex-start-column();

		>view {
			width: 100%;
			_flex-center();
			justify-content: space-between;
			position: relative;
			_box-sizing(0, 32rpx);

			>text {
				font-size: 32px;
				font-weight: 400;
				color: #262626;
			}

			>view {
				height: 100rpx;
				display: flex;
				align-items: center;

				text:last-child {
					font-size: 26rpx;
					font-weight: 400;
					color: #999999;
				}

				text:first-child {
					font-size: 30rpx;
					font-weight: 400;
					color: #1A1A1A;
				}
			}
		}

		>view::after {
			display: block;
			content: '';
			position: absolute;
			bottom: 0;
			left: 30rpx;
			width: 630rpx;
			border-bottom: 1rpx solid #EEEEEE;
		}

		>view:last-child::after {
			border-bottom: none;
		}
	}

	.confirm-bottom {
		margin-top: 30rpx;
		width: 690rpx;
		background: #FFFFFF;
		border-radius: 12px;
		_flex-start-column();

		>view {
			width: 100%;
			color: #FF5000;
			_flex-center();
			justify-content: space-between;
			position: relative;
			font-size: 24rpx;
			_box-sizing(0, 32rpx);

			>text {
				font-size: 32px;
				font-weight: 400;
				color: #262626;
			}

			>view {
				height: 100rpx;
				display: flex;
				align-items: center;

				text:first-child {
					margin-left: 6rpx;
					font-size: 30rpx;
					font-weight: 400;
					color: #1A1A1A;
				}
			}

			>input {
				width: 70%;
				color: #1A1A1A;
			}
		}

		>view::after {
			display: block;
			content: '';
			position: absolute;
			bottom: 0;
			left: 30rpx;
			width: 630rpx;
			border-bottom: 1rpx solid #EEEEEE;
		}

		>view:last-child::after {
			border-bottom: none;
		}

		.confirm-bottom-blue {
			font-size: 24rpx;
			font-weight: 400;
			color: #479CFE;

			.confirm-btn-left {
				text:first-child {
					font-size: 30rpx;
					font-weight: 400;
					color: #1A1A1A;
				}

				text:last-child {
					font-size: 46px;
					font-weight: 600;
					color: #FF5000;
				}
			}
		}
	}
}

.confirm-btn {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 750rpx;
	height: 110rpx;
	background: #FFFFFF;
	box-shadow: 0px -2rpx 4rpx 0px rgba(233, 233, 233, 0.5);
	_flex-center();
	justify-content: space-between;
	_box-sizing(0, 28rpx);

	.confirm-btn-left {
		font-size: 30rpx;
		font-weight: 400;
		color: #1A1A1A;

		>text:last-child {
			font-size: 46rpx;
			font-weight: 600;
			color: #FF5000;
		}
	}

	.confirm-btn-right {
		width: 260rpx;
		height: 88rpx;
		background: #479CFE;
		border-radius: 44rpx;
		font-size: 36rpx;
		font-weight: 500;
		color: #FFFFFF;
		_flex-center();
	}
}