@import '../../static/css/common.styl'


.detail-index
	_flex-start-column()
	align-items center
	width 750rpx
	overflow-x hidden
	background #F6F6F6
	position: relative
	.aleady-sign
		position absolute
		right: 27rpx
		top 471rpx
		height: 50rpx;
		background: #000;
		border-radius: 25px;
		opacity 0.4
		color: #FFFFFF;
		font-size: 26rpx;
		_flex-center()
		padding: 0 20rpx

.detail-center
	box-sizing border-box
	padding 40rpx 32rpx
	width 750rpx
	height 350rpx
	background #FFFFFF
	border-radius 12rpx
	.detail-center-top
		display flex
		align-items center
		font-size 30rpx
		font-weight 400
		color #FF5000
		>text
			font-size 24px
			font-weight 400
			color #999999
	.detail-center-center
		display flex
		align-items center
		padding 20rpx 0 40rpx
		.money-left
			display flex
			font-size 50rpx
			font-weight 500
			color #FF5000
			align-items flex-end
			>view
				font-size 34rpx
		.money-right
			_flex-center()
			// align-items flex-end

			// width 265rpx
			height 53rpx
			padding 0 20rpx
			margin-left 15rpx
			background #FF5000
			border-radius 27rpx
			color #fff
			font-size 40rpx
			>view
				transform translateY(4rpx)
				font-size 24rpx
				font-weight 400
	.school-name
		padding-bottom 20rpx
		font-size 36rpx
		font-weight 500
		color #262626
	.school-detail
		font-size 24rpx
		color #999999
		line-height 36rpx
.detail-menu
	margin-top 30rpx
	width 750rpx
	background #FFFFFF
	border-radius 16rpx 16rpx 0px 0px
	_flex-start-column()
	.baozhang
		background #FBFCFB
.detail-menu-items
	_box-sizing(32rpx, 32rpx)
	position relative
	width 100%
	display flex
	justify-content space-between
	align-items center
	.itme-title
		font-size 28rpx
		width 95rpx
		white-space nowrap
		font-weight 500
		color #1A1A1A
	.item-right
		font-size 28rpx
		font-weight 400
		color #1A1A1A
	.item-right-btn
		font-size 28rpx
		font-weight 400
		color #FF4200
		display flex
		align-items center
		.iconfont
			color #B4B4B4 !important
.detail-menu-items::after
	display block
	position absolute
	content ''
	bottom 0
	left 83rpx
	width 605rpx
	border-bottom 1rpx solid #EEEEEE
.no-line::after
	border-bottom none
.detail-menu-item-content
	width 100%
	display flex
	flex-flow wrap
	>text
		width 134rpx
		height 72rpx
		background #FFF
		border-radius 36rpx
		border 1rpx solid #D4D4D4
		_flex-center()
		font-size 28rpx
		font-weight 400
		color #1A1A1A
		margin 0 12rpx 16rpx 0
	.active-detail-menu
		background #E3F3FF
		border-radius 36rpx
		border 1rpx solid #479CFE
		color #479CFE
	>view
		_flex-center()
		margin 0 30rpx 0 0
		>image
			width 24rpx
			height 24rpx
			margin-right 6rpx
			// background: #0091FF;
		>text
			font-size 26rpx
			font-weight 400
			color #7E7E7E
.detail-rich
	width 100%
	margin-top: 30rpx
	.detail-rich-title
		width 100%
		height 101rpx
		background #FFFFFF
		border-radius 12rpx 12rpx 0 0
		display flex
		align-items center
		_box-sizing(0, 30rpx)
	>image
		width 100%
		height 500rpx
		background-color pink
.detail-bottom-btn
	_flex-center()
	width 750rpx
	height 127rpx
	background #FFFFFF
	position fixed
	bottom 0
	left 0
	z-index 999
	>view
		width 690rpx
		height 98rpx
		_flex-center()
		background #479CFE
		border-radius 49rpx
		font-size 36rpx
		font-weight 500
		color #FFFFFF
.coupon-pop-mark
	width 750rpx
	height 70vh
	position fixed
	left 0
	top 0
	z-index 9999
	background-color rgba(0, 0, 0, 0.5)
.coupon-pop
	width 750rpx
	position fixed
	bottom 127rpx
	left 0
	z-index 9999
	background #FFFFFF
	border-radius 20rpx 20rpx 0px 0px
	>view:first-child
		_flex-center()
		justify-content space-between
		_box-sizing(0, 30rpx)
		width 750rpx
		height 106rpx
		border-bottom 1rpx solid #eee
		>view
			font-size 36rpx
			font-weight 500
			color #272727
		>image
			width 40rpx
			height 40rpx
			background-color pink
	>view:nth-of-type(2)
		_flex-center()
		justify-content flex-start
		_box-sizing(0, 30rpx)
		width 750rpx
		height 81rpx
		>view:first-child
			font-size 24px
			font-weight 400
			color #1A1A1A
		>view:last-child
			font-size 24px
			font-weight 400
			color #FF5000
	.coupon-pop-list
		_box-sizing(34rpx, 30rpx)
		padding-bottom 100rpx
		width 750rpx
		height 500rpx
		overflow auto
		background #F6F6F6
.rich-text
	width 100%
	padding-bottom 200rpx
.van-tabs
	background-color $color-bg
.van-tabs__line
	background-color transparent !important
	width 20rpx !important
	height 15rpx !important
	border-width 8rpx
	border-radius 50% !important
	border-style solid !important
	border-color transparent transparent rgba(71, 156, 254, 1) transparent !important
.van-ellipsis
	// color $color-gray-1
	font-size 30rpx
.van-tabs__content
	margin-top 12rpx
.van-tab--active .van-ellipsis
	// color $color-normal-black !important
	// font-size 36rpx !important
	// font-weight 700 !important
.tab-item
	padding-bottom 120rpx
	>image
		width 100%