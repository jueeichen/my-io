@import '../../static/css/common.styl';

.integral-detail {
	background-color: #F4F4F4;
	min-height: 100vh
}

.integral-detail-top {
	background-size: 100%;
	width: 750rpx;
	height: 310rpx;
	position: relative;

	>image {
		width: 100%;
		height: 100%;
	}

	>view {
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		_flex-center-column();

		>view {
			font-size: 64rpx;
			font-weight: 600;
			color: #FFFFFF;
		}

		>view:first-child {
			font-size: 28rpx;
			font-weight: 400;
		}

		>view:last-child {
			width: 148rpx;
			height: 60rpx;
			background: #E2F7FF;
			border-radius: 35rpx 0 0 35rpx;
			position: absolute;
			right: 0;
			top: 38rpx;
			_flex-center();
			color: #479CFE;
			font-size: 24rpx;
		}
	}
}

.integral-detail-list {
	margin-top: 19rpx;
	background-color: #fff;
}

.integral-detail-item {
	width: 750rpx;
	_flex-start-column();
	_box-sizing(35rpx, 30rpx);
	padding-bottom: 0rpx;

	>view {
		width: 100%;
		font-size: 24rpx;
		font-weight: 400;
		color: #999999;
		margin-bottom: 16rpx;
	}

	>view:first-child {
		margin-bottom: 30rpx;
		_flex-center();
		justify-content: space-between;

		>view:first-child {
			font-size: 32rpx;
			font-weight: 400;
			color: #1A1A1A;
		}

		>view:last-child {
			font-size: 36rpx;
			font-weight: 500;
			color: #FF5000;
		}
	}

	>view:last-child {
		padding-bottom: 39rpx;
		border-bottom: 1px solid #EEEEEE;
	}
}

.integral-detail-item:last-child {
	padding-bottom: 39rpx;
	border-bottom: 1px solid #EEEEEE;

	>view:last-child {
		border-bottom: none;
	}
}

.integral-mask {
	position: fixed;
	width: 100vw;
	height: 100vh;
	left: 0;
	top: 0;
	z-index 99
	background-color: rgba(0,0,0,0.5)
	_flex-center-column();
	>view{
	width: 580rpx;
	height: 500rpx;
	background: #FFFFFF;
	border-radius: 12rpx;
	_flex-start-column();
	
	>view{
	font-size: 32rpx;
	font-weight: 500;
	color: #1A1A1A;
	_flex-center()
	margin: 41rpx 0 50rpx
	// align-items center;
	width:100%
	}
	>text{
	width:100%
	_box-sizing(0,32rpx)
	font-size: 26rpx;
	font-weight: 400;
	color: #1A1A1A;
	line-height: 37rpx;
	}
	}
}