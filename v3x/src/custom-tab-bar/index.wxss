.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
	box-sizing: content-box;
  z-index: 12;
}

.tab-bar-border {
  width: 100%;
  height: 1px;
  background-color: #f5f5f5;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}
.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
	position: relative;
}

.tab-bar-item .cover-image {
  width: 54rpx;
  height: 54rpx;
  margin: 0 auto;
}

.tab-bar-item .cover-view {
  font-size: 20rpx;
  white-space: nowrap;
}

.task-tag {
	position: absolute;
	top: -10rpx;
	width: 64rpx;
	height: 30rpx;
	line-height: 30rpx;
	font-size: 16rpx;
	border-radius: 8rpx 8rpx 8rpx 0;
	color: #fff;
	background: linear-gradient(90deg, #ff2e30, #ff5391);
	left: 50%;
	transform: translateX(30%);
}